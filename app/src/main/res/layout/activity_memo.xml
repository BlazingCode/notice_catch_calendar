<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:background="#F3F3F3"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:weightSum="100"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:padding="10dp"
        android:layout_weight="5"
        android:background="@drawable/round_bottom_layout">

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ic_action_delete"
            android:background="#FFFFFF"
            android:layout_gravity="right"/>

        <EditText
            android:id="@+id/memo_title"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_rowSpan="2"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="top"
            android:text=" 제목"/>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/btn_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FF0000"
                android:adjustViewBounds="true"
                bind:imageUrl="@{item.image}"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center_vertical"
            android:text="      시작"/>
        <LinearLayout
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:orientation="horizontal">
            <NumberPicker
                android:id="@+id/start_time_hour"
                android:layout_height="match_parent"
                android:layout_width="50dp" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" : "/>
            <NumberPicker
                android:id="@+id/start_time_minute"
                android:layout_height="match_parent"
                android:layout_width="50dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center_vertical"
            android:text="      종료"/>
        <LinearLayout
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:orientation="horizontal">
            <NumberPicker
                android:id="@+id/finish_time_hour"
                android:layout_height="match_parent"
                android:layout_width="50dp"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" : "/>
            <NumberPicker
                android:id="@+id/finish_time_minute"
                android:layout_height="match_parent"
                android:layout_width="50dp"/>
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="50"
        android:padding="30dp"
        android:orientation="vertical"
        android:background="@drawable/round_top_layout">

        <EditText
            android:id="@+id/edit_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메모"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="5"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="취소" />
        <Button
            android:id="@+id/btn_ok"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="확인"/>
    </LinearLayout>
</LinearLayout>
